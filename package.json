  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/juan294/chapa-cli"
  },
  "homepage": "https://github.com/juan294/chapa-cli#readme",
  "bugs": {
    "url": "https://github.com/juan294/chapa-cli/issues"
  },
  "engines": {
    "node": ">=18"
  },
  "devDependencies": {
    "@types/node": "^22.19.10",
    "@vitest/coverage-v8": "^4.0.0",
    "tsup": "^8.5.1",
    "typescript": "^5.7.3",
    "vitest": "^4.0.0"
  }
