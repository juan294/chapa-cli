{
  "name": "chapa-cli",
  "version": "0.2.7",
  "description": "Merge GitHub EMU contributions into your Chapa developer impact badge",
  "type": "module",
  "bin": {
    "chapa-cli": "dist/index.js",
    "chapa": "dist/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
